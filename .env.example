# Next.js App Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.com
NODE_ENV=development
PORT=3007

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_MONTHLY_PRICE_ID=price_your_monthly_price_id_here
STRIPE_YEARLY_PRICE_ID=price_your_yearly_price_id_here

# reCAPTCHA Configuration
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# Google AdSense Configuration
NEXT_PUBLIC_ADSENSE_CLIENT_ID=your_adsense_client_id
NEXT_PUBLIC_ADSENSE_PUBLISHER_ID=pub-your_adsense_publisher_id

# Email Configuration
# Option 1: Resend (Recommended - 3,000 free emails/month)
RESEND_API_KEY=re_your_resend_api_key_here

# Newsletter Admin
NEWSLETTER_ADMIN_KEY=your_secure_admin_key_here

# Beehiiv Configuration (Primary Newsletter Platform)
BEEHIIV_API_KEY=your_beehiiv_api_key_here
BEEHIIV_PUBLICATION_ID=pub_your_publication_id_here
BEEHIIV_WEBHOOK_SECRET=your_beehiiv_webhook_secret_here

# Option 2: Gmail Fallback (if Resend not configured)
# Use Gmail App Password (not your regular password)
GMAIL_USER=your_email@gmail.com
GMAIL_APP_PASSWORD=your_16_character_app_password_here

# Google Translate API (Optional)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key

# Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id